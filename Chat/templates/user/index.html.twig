{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <h1>Login</h1>

    {% include "alerts/message.html.twig" %}

    <form action="{{ path('app_user_login') }}" method="post">
        <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

        <div class="form-group mb-3">
            <label class="form-label" for="username">E-mail:</label>
            <input class="form-control" type="email" id="username" name="_username" value="{{ lastUserName }}" placeholder="Digite seu e-mail" required>
        </div>

        <div class="form-group mb-3">
            <label class="form-label" for="password">Senha:</label>
            <input class="form-control" type="password" id="password" name="_password" placeholder="Digite sua senha" required>
        </div>

        <button class="btn btn-primary" type="submit">Entrar</button>

        <div class="text-center mt-3">
            <a href="{{ path('app_user_home') }}" class="btn btn-secondary text-white">Criar uma conta</a>
        </div>

        <div class="text-center mt-3">
            <a href="#" class="text-primary">Esqueceu a senha?</a>
        </div>
    </form>
{% endblock %}